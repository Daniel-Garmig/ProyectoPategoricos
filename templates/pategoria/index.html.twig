{% extends 'base.html.twig' %}

{% block title %}Pategoria index{% endblock %}

{% block body %}
    <h1>Pategoria index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pategorium in pategorias %}
            <tr>
                <td>{{ pategorium.id }}</td>
                <td>{{ pategorium.nombre }}</td>
                <td>
                    <a href="{{ path('app_pategoria_show', {'id': pategorium.id}) }}">show</a>
                    <a href="{{ path('app_pategoria_edit', {'id': pategorium.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pategoria_new') }}">Create new</a>
{% endblock %}
